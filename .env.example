NODE_ENV=production
PORT=3200

# Database
DATABASE_URL=postgresql://streamvault:your_password@localhost:5432/streamvault

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=change_this_to_a_random_string
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Storage
UPLOAD_DIR=/var/www/streamvault/uploads
TRANSCODED_DIR=/var/www/streamvault/transcoded
THUMBNAIL_DIR=/var/www/streamvault/thumbnails
HLS_DIR=/var/www/streamvault/hls
MAX_FILE_SIZE=53687091200

# Base URL
BASE_URL=https://your-domain.com
MEDIA_URL=https://your-domain.com/media

# Transcoding
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
